@page
@model aref_final.Pages.contactModel
@{
    ViewData["Title"] = "Contact Us";
}

<div class="container">

    <h1 class="text-success mt-4">Contact Curious Toys</h1>

    <p class="mt-3">We're excited to hear from you! Please fill out the form below:</p>

    <form>
        <div class="form-group">
            <label for="name">Your Name:</label>
            <input type="text" class="form-control" id="name" name="name" required>
        </div>
        <br />
        <div class="form-group">
            <label for="email">Your Email:</label>
            <input type="email" class="form-control" id="email" name="email" required>
        </div>
        <br />

        <div class="form-group">
            <label for="message">Your Message:</label>
            <textarea class="form-control" id="message" name="message" rows="4" required></textarea>
        </div>
        <br />

        <button type="submit" class="btn btn-success mt-3">Send Message</button>
    </form>

    <p class="mt-3">Alternatively, you can reach us at <strong>info@curioustoys.com</strong>.</p>

</div>